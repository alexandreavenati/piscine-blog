{% extends 'base.html.twig' %}

{% block metatitle %}
	{{ category.title }}
{% endblock metatitle %}

{% block main %}
	<main>
		<section class="latest-articles">
			<h2>{{ category.title }}</h2>
			<div class="articles-list">
				{# Donne une classe par couleur donné aux catégories #}
				<article class="article-card {{ category.color }}">
					<h3>{{ category.title }}</h3>
					<p>
						<b>{{ category.description }}</b>
					</p>
					<span>Publié le
						{{ category.createdAt | date('d/m/Y') }}</span>
				</p>
			</article>
		</div>
	</section>
</main>{% endblock main %}
