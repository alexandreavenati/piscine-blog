{% extends 'base.html.twig' %}

{% block metatitle %}
	Tout les articles de blog post√©s
{% endblock metatitle %}

{% block main %}
	<section class="latest-articles, home-page">
		<h2>Tout les articles</h2>
		<div class="articles-list">
			{% if not articles %}
				<p>Il n'y a aucun article publi√© pour le moment.</p>
			{% else %}
				{% for article in articles %}
					<div class="article-wrapper">
						<a href="{{ path('show-article', {'id': article.id}) }}">
							<article class="article-card {% if article.category %}{{ article.category.color }}{% endif %}">
								{% if article.image %}
									<div><img src="{{ article.image }}" alt="{{ article.title }}"></div>
								{% endif %}
								<h3>{{ article.title }}</h3>
								<span>Publi√© le {{ article.createdAt | date('d/m/Y') }}</span>
								{% if article.category %}
									<h4>Cat√©gorie : {{ article.category.title }}</h4>
								{% endif %}
							</article>
						</a>
						<div class="article-actions">
							<a href="{{ path('update-article', {'id': article.id}) }}" class="link-update">‚úèÔ∏è Modifier</a>
							<a href="{{ path('delete-article', {'id': article.id}) }}" class="link-delete" onclick="return confirm('Confirmer la suppression de cet article ?')">
								üóë Supprimer
							</a>
						</div>
					</div>
				{% endfor %}
			{% endif %}
		</div>

	</section>
{% endblock main %}

{% block flashMessage %}
	{% for message in app.flashes('article_deleted') %}
		<div class="success-message">
			{{ message }}
		</div>
	{% endfor %}
{% endblock flashMessage %}
